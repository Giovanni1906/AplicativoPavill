            <!--                <AutoCompleteTextView-->
            <!--                    android:id="@+id/autoCompleteReference"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:background="@drawable/search_box_background"-->
