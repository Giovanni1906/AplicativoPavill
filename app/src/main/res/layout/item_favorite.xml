<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    style="@style/CustomRadioOptionLayout">

    <TextView
        android:id="@+id/favoriteAddress"
        style="@style/CustomRadioButtonStyle"
        app:buttonCompat="@null"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/btnSendFavorite"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:contentDescription="Eliminar favorito"
        android:src="@drawable/ic_type_taxi"
        app:tint="@color/iconColor"
        android:layout_marginHorizontal="10dp"/>

    <ImageButton
        android:id="@+id/btnDeleteFavorite"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:contentDescription="Eliminar favorito"
        android:src="@drawable/ic_trash"
        app:tint="@color/iconColor" />


</LinearLayout>
