<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:background="@drawable/rounded_corner">

    <!-- Botón de cerrar circular con icono X -->
    <ImageButton
        android:id="@+id/btnCloseDialog"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/circular_image_purple_mask"
        android:contentDescription="cerrar ventana"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/lblSearchAddressTittle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dirección de origen"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnCloseDialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <LinearLayout
        android:id="@+id/layoutSearchOrigin"
        style="@style/GeneralLinearLayoutStyle"
        app:layout_constraintTop_toBottomOf="@id/lblSearchAddressTittle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="visible">

        <ImageView
            style="@style/GeneralImageViewStyle"
            android:contentDescription="Buscar"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/searchEditText"
            style="@style/GeneralEditTextStyle"
            android:hint="Ubicación de origen"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/btnDeleteOrigin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:contentDescription="eliminar dirección"
            android:padding="8dp"
            android:src="@drawable/ic_trash" />
    </LinearLayout>

    <!-- Indicador de progreso -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutSearchOrigin"
        app:layout_constraintBottom_toTopOf="@id/suggestionsRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Lista de sugerencias -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/suggestionsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para seleccionar del mapa -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSelectFromMap"
        style="@style/Button.Form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Seleccionar del mapa"
        android:background="@drawable/button_alternative"
        app:layout_constraintTop_toBottomOf="@id/suggestionsRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>