<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Botón de cerrar circular con icono X -->
    <ImageButton
        android:id="@+id/btnCloseDialog"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/circular_image_purple_mask"
        android:contentDescription="Cerrar diálogo"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <!-- Campo de búsqueda -->
    <TextView
        android:id="@+id/lblSearchAddressTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCloseDialog"
        android:layout_marginTop="8dp"
        android:paddingBottom="5dp"
        android:text="Direccion de origen"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="?attr/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblSearchAddressTittle"
        android:layout_marginTop="8dp"
        android:hint="Buscar dirección..."
        android:inputType="text"
        android:background="@drawable/search_box_background"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />

    <!-- Indicador de progreso -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        style="?android:attr/progressBarStyleSmall" />

    <!-- Lista de sugerencias -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/suggestionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_marginTop="8dp"
        android:maxHeight="300dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:layout_marginBottom="16dp" />

    <!-- Botón para seleccionar del mapa -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSelectFromMap"
        style="@style/Button.Form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/suggestionsRecyclerView"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_alternative"
        android:text="Seleccionar del mapa" />

</RelativeLayout>
